#include <stdio.h>
int raj(int);
int raj(int a)
{
    int tot=0;
    while(a>0)
    {
        tot=tot+a%10;
        a=a/10;
    }
    return tot;
}
void main()
{
    int a;
    int sum=0;
   while(1)
   {
       printf("Enter the num");
       scanf("%d",&a);
       if(a==0)
        break;
       else
        sum=sum+raj(a);
   }
   printf("the sum %d",sum);
}
